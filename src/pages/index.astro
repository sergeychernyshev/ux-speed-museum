---
import ExhibitLayout from '../layouts/ExhibitLayout.astro';

const title = 'Welcome to the Museum';
---

<ExhibitLayout title={title} showShield={false}>
  <div class="welcome-stage">
    <h1>{title}</h1>
    <p class="intro-text">
      The UX Speed Museum is a place to experience the visceral impact of
      performance bottlenecks. Here, we don't just measure metrics; we feel
      them. Explore our exhibits to understand why speed matters.
    </p>

    <div class="cta-section">
      <h2>Gallery of Exhibits</h2>
      <div class="exhibit-grid">
        <a href="/exhibits/slow-starter" class="exhibit-card">
          <h3>The Slow Starter</h3>
          <p>Experience the impact of slow First Contentful Paint (FCP).</p>
        </a>
      </div>
    </div>
  </div>

  <style>
    .welcome-stage {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 4rem 2rem;
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      gap: 2rem;
    }

    h1 {
      font-size: 2.5rem;
      color: var(--accent-color);
    }

    .intro-text {
      font-size: 1.25rem;
      max-width: 800px;
      line-height: 1.6;
    }

    .cta-section {
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 1px solid var(--border-color);
      width: 100%;
    }

    .exhibit-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
      width: 100%;
    }

    .exhibit-card {
      background: var(--sidebar-bg);
      border: 1px solid var(--border-color);
      padding: 2rem;
      border-radius: 8px;
      text-decoration: none;
      color: inherit;
      transition:
        transform 0.2s,
        border-color 0.2s;
    }

    .exhibit-card:hover {
      transform: translateY(-4px);
      border-color: var(--accent-color);
    }

    .exhibit-card h3 {
      margin-top: 0;
      color: var(--accent-color);
    }
  </style>
</ExhibitLayout>
