---
import ExhibitLayout from '../layouts/ExhibitLayout.astro';
import ExhibitDescription from '../components/ExhibitDescription.astro';

const title = 'Welcome to the Museum';
const description =
  "The UX Speed Museum is a place to experience the visceral impact of performance bottlenecks. Here, we don't just measure metrics; we feel them. Explore our exhibits to understand why speed matters.";
---

<ExhibitLayout title={title}>
  <ExhibitDescription description={description} />

  <div class="welcome-stage">
    <h2>Step into the Gallery</h2>
    <p>
      Select an exhibit from the sidebar to begin your journey through the
      layers of user experience friction.
    </p>
  </div>

  <style>
    .welcome-stage {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 4rem 2rem;
      background: var(--card-bg);
      border: 1px dashed var(--border-color);
      border-radius: 12px;
    }
  </style>
</ExhibitLayout>
