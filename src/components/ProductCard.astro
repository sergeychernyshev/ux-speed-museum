---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div class="product-card" id={id}>
  <div class="product-image-container">
    <img
      src="https://placehold.co/600x400/e2e8f0/1e293b?text=Luxury+Timepiece"
      alt="Product"
      class="product-image"
    />
  </div>
  <div class="product-info">
    <h3 class="product-title">Chronos Elite Series 5</h3>
    <p class="product-price">$1,299.00</p>
    <button class="buy-button">Buy Now</button>
  </div>
</div>

<style>
  .product-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    width: 100%;
    max-width: 400px;
    opacity: 0;
    transition: opacity 0.3s ease-out;
  }

  .product-card.visible {
    opacity: 1;
  }

  .product-image-container {
    position: relative;
    aspect-ratio: 3/2;
    background: var(--sidebar-bg);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .product-image.painted {
    opacity: 1;
  }

  .product-info {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product-title,
  .product-price,
  .buy-button {
    opacity: 0;
    transform: translateY(10px);
    transition:
      opacity 0.4s ease-out,
      transform 0.4s ease-out;
  }

  .product-title.painted,
  .product-price.painted,
  .buy-button.painted {
    opacity: 1;
    transform: translateY(0);
  }

  .product-price {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--accent-color);
  }

  .buy-button {
    background: var(--accent-color);
    color: white;
    border: none;
    padding: 0.75rem;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
  }

  :global(.scrubbing) .product-card {
    opacity: 0.3 !important;
    filter: grayscale(1);
  }

  :global(.scrubbing) .painted {
    opacity: 0 !important;
  }
</style>

<script>
  // Add interactivity to the buy button
  document.querySelectorAll('.buy-button').forEach((button) => {
    button.addEventListener('click', () => {
      alert('Success! Added to your collection.');
    });
  });
</script>
