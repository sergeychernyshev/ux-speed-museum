---
interface Props {
  min: number;
  max: number;
  step: number;
  defaultValue: number;
  label: string;
  unit?: string;
  id?: string;
  list?: string;
}

const { min, max, step, defaultValue, label, unit = '', id = "performance-scrubber", list } = Astro.props;
---

<div class="performance-controller">
  <div class="controller-header">
    <label for={id}>{label}</label>
    <span class="value-display" id={`${id}-display`}>
      <span class="current-value">{defaultValue}</span>{unit}
    </span>
  </div>
  <input
    type="range"
    id={id}
    min={min}
    max={max}
    step={step}
    value={defaultValue}
    data-unit={unit}
    list={list}
  />
</div>

<style>
  .performance-controller {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    padding: 1rem;
    border-radius: 8px;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .controller-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    gap: 1rem;
  }

  .value-display {
    font-weight: bold;
    color: var(--accent-color);
  }

  input[type='range'] {
    width: 100%;
    cursor: pointer;
  }
</style>

<script>
  // Handle multiple controllers if necessary
  document.querySelectorAll('.performance-controller').forEach(container => {
    const scrubber = container.querySelector('input[type="range"]') as HTMLInputElement;
    const valueDisplay = container.querySelector('.current-value');
    const unit = scrubber?.getAttribute('data-unit') || '';

    scrubber?.addEventListener('input', (e) => {
      const value = (e.target as HTMLInputElement).value;
      if (valueDisplay) valueDisplay.textContent = value;

      // Dispatch custom event for exhibit to listen to (scrubbing)
      window.dispatchEvent(
        new CustomEvent('performance-update', {
          detail: { value: parseInt(value), id: scrubber.id },
        })
      );
    });

    scrubber?.addEventListener('change', (e) => {
      const value = (e.target as HTMLInputElement).value;

      // Dispatch completion event (released)
      window.dispatchEvent(
        new CustomEvent('performance-update-end', {
          detail: { value: parseInt(value), id: scrubber.id },
        })
      );
    });
  });
</script>
